<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>My Posted Jobs - Job Portal</title>
    <style>
        body {
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            padding: 40px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .page-header {
            color: white;
            margin-bottom: 40px;
        }

        .page-header h1 {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .page-header p {
            color: #a0aec0;
            font-size: 16px;
        }

        /* Alert Styling */
        .alert {
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 25px;
            border: none;
            background: rgba(255,255,255,0.1);
            color: white;
            border-left: 4px solid;
        }

        .alert-success {
            border-left-color: #38ef7d;
            background: rgba(56, 239, 125, 0.1);
        }

        .alert-danger {
            border-left-color: #f5576c;
            background: rgba(245, 87, 108, 0.1);
        }

        /* Jobs Grid */
        .jobs-grid {
            display: grid;
            gap: 20px;
            margin-bottom: 40px;
        }

        .job-card {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 15px;
            padding: 25px;
            color: white;
            transition: all 0.3s;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.4);
            border-color: rgba(255,255,255,0.2);
        }

        .job-card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 15px;
        }

        .job-title {
            font-size: 22px;
            font-weight: 700;
            color: white;
            margin: 0;
        }

        .status-badge {
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-active {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .status-closed {
            background: rgba(245, 87, 108, 0.2);
            color: #f5576c;
        }

        .job-meta {
            display: flex;
            gap: 30px;
            margin-bottom: 15px;
            flex-wrap: wrap;
            font-size: 14px;
            color: #a0aec0;
        }

        .job-meta-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .job-description {
            color: #cbd5e0;
            margin-bottom: 15px;
            line-height: 1.6;
        }

        .job-skills {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
            margin-bottom: 15px;
        }

        .skill-badge {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 12px;
        }

        .job-footer {
            display: flex;
            gap: 10px;
            justify-content: space-between;
            align-items: center;
            padding-top: 15px;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        .job-stats {
            display: flex;
            gap: 20px;
            font-size: 13px;
            color: #a0aec0;
        }

        .job-actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 13px;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #764ba2;
            transform: translateY(-2px);
            color: white;
        }

        .btn-warning {
            background: rgba(240, 174, 74, 0.2);
            color: #f0ae4a;
        }

        .btn-warning:hover {
            background: #f0ae4a;
            color: white;
        }

        .btn-danger {
            background: rgba(245, 87, 108, 0.2);
            color: #f5576c;
        }

        .btn-danger:hover {
            background: #f5576c;
            color: white;
        }

        .no-data {
            text-align: center;
            padding: 60px 20px;
            color: #a0aec0;
        }

        .no-data i {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .spinner {
            text-align: center;
            padding: 40px;
            color: #a0aec0;
        }

        @media (max-width: 768px) {
            .job-card-header {
                flex-direction: column;
                gap: 10px;
            }

            .job-meta {
                flex-direction: column;
                gap: 10px;
            }

            .job-footer {
                flex-direction: column;
                gap: 15px;
            }

            .job-actions {
                width: 100%;
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1><i class="bi bi-briefcase me-2"></i> My Posted Jobs</h1>
            <p>Manage and track all your job postings</p>
        </div>

        <!-- Success/Error Messages -->
        <% if (locals.success) { %>
            <div class="alert alert-success">
                <i class="bi bi-check-circle"></i> <%= locals.success %>
            </div>
        <% } %>
        <% if (locals.error) { %>
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-circle"></i> <%= locals.error %>
            </div>
        <% } %>

        <!-- Jobs Container -->
        <div id="jobsContainer" class="jobs-grid">
            <div class="spinner">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>

    <script>
        // Load jobs on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadAllJobs();
        });

        // Load all recruiter jobs
        async function loadAllJobs() {
            try {
                const response = await fetch('/jobs/my-jobs');
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                const jobs = data.data || [];

                if (jobs.length === 0) {
                    showNoData();
                    return;
                }

                displayJobs(jobs);
            } catch (error) {
                console.error('Error loading jobs:', error);
                document.getElementById('jobsContainer').innerHTML = `
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-circle"></i>
                        Failed to load jobs. Please refresh the page.
                    </div>
                `;
            }
        }

        // Display jobs
        function displayJobs(jobs) {
            const container = document.getElementById('jobsContainer');

            const jobsHTML = jobs.map(job => `
                <div class="job-card">
                    <div class="job-card-header">
                        <h3 class="job-title">${job.title || 'Untitled Job'}</h3>
                        <span class="status-badge ${job.status === 'Active' ? 'status-active' : 'status-closed'}">
                            ${job.status || 'Closed'}
                        </span>
                    </div>

                    <div class="job-meta">
                        <div class="job-meta-item">
                            <i class="bi bi-geo-alt"></i>
                            ${job.location || 'Location not specified'}
                        </div>
                        <div class="job-meta-item">
                            <i class="bi bi-briefcase"></i>
                            ${job.jobType || 'Job Type'}
                        </div>
                        <div class="job-meta-item">
                            <i class="bi bi-currency-rupee"></i>
                            ${job.salary || 'Salary not specified'}
                        </div>
                        <div class="job-meta-item">
                            <i class="bi bi-calendar"></i>
                            ${new Date(job.createdAt).toLocaleDateString()}
                        </div>
                    </div>

                    ${job.description ? `
                        <div class="job-description">
                            ${job.description.substring(0, 200)}${job.description.length > 200 ? '...' : ''}
                        </div>
                    ` : ''}

                    ${job.skills && job.skills.length > 0 ? `
                        <div class="job-skills">
                            ${job.skills.map(skill => `<span class="skill-badge">${skill}</span>`).join('')}
                        </div>
                    ` : ''}

                    <div class="job-footer">
                        <div class="job-stats">
                            <div>
                                <i class="bi bi-file-earmark-text"></i>
                                <strong>${job.applicationCount || 0}</strong> Applications
                            </div>
                        </div>
                        <div class="job-actions">
                            <a href="/recruiter/view-applicants/${job._id}" class="btn btn-primary">
                                <i class="bi bi-people"></i> View Applicants
                            </a>
                            <a href="/recruiter/edit-job/${job._id}" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form action="/jobs/${job._id}/delete" method="POST" style="display: inline;" 
                                  onsubmit="return confirm('Are you sure you want to delete this job?');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            `).join('');

            container.innerHTML = jobsHTML;
        }

        function showNoData() {
            document.getElementById('jobsContainer').innerHTML = `
                <div class="no-data">
                    <i class="bi bi-briefcase"></i>
                    <h3>No Jobs Posted Yet</h3>
                    <p>Start by posting your first job to attract qualified candidates</p>
                    <a href="/recruiter/post-job" class="btn btn-primary" style="margin-top: 20px;">
                        <i class="bi bi-plus-circle"></i> Post New Job
                    </a>
                </div>
            `;
        }
    </script>
</body>
</html>
