<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>All Applications - Job Portal</title>
    <style>
        body {
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            padding: 40px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .page-header {
            color: white;
            margin-bottom: 40px;
        }

        .page-header h1 {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .page-header p {
            color: #a0aec0;
            font-size: 16px;
        }

        /* Alert Styling */
        .alert {
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 25px;
            border: none;
            background: rgba(255,255,255,0.1);
            color: white;
            border-left: 4px solid;
        }

        .alert-success {
            border-left-color: #38ef7d;
            background: rgba(56, 239, 125, 0.1);
        }

        .alert-danger {
            border-left-color: #f5576c;
            background: rgba(245, 87, 108, 0.1);
        }

        /* Applications List */
        .applications-list {
            display: grid;
            gap: 15px;
        }

        .application-card {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 12px;
            padding: 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .application-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.4);
            border-color: rgba(255,255,255,0.2);
        }

        .applicant-info {
            flex: 1;
        }

        .applicant-name {
            font-size: 18px;
            font-weight: 700;
            color: white;
            margin-bottom: 8px;
        }

        .applicant-meta {
            display: flex;
            gap: 20px;
            font-size: 13px;
            color: #a0aec0;
            flex-wrap: wrap;
        }

        .applicant-meta-item {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .status-badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            white-space: nowrap;
        }

        .status-applied {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
        }

        .status-reviewed {
            background: rgba(240, 174, 74, 0.2);
            color: #f0ae4a;
        }

        .status-shortlisted {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .status-hired {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .status-rejected {
            background: rgba(245, 87, 108, 0.2);
            color: #f5576c;
        }

        .application-actions {
            display: flex;
            gap: 10px;
            margin-left: 20px;
        }

        .btn {
            padding: 8px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            font-size: 12px;
            transition: all 0.3s;
            white-space: nowrap;
        }

        .btn-sm {
            padding: 6px 10px;
            font-size: 11px;
        }

        .btn-success {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .btn-success:hover {
            background: #38ef7d;
            color: #1a202c;
        }

        .btn-warning {
            background: rgba(240, 174, 74, 0.2);
            color: #f0ae4a;
        }

        .btn-warning:hover {
            background: #f0ae4a;
            color: #1a202c;
        }

        .btn-danger {
            background: rgba(245, 87, 108, 0.2);
            color: #f5576c;
        }

        .btn-danger:hover {
            background: #f5576c;
            color: white;
        }

        .btn-primary {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
            padding: 8px 16px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .btn-primary:hover {
            background: #667eea;
            color: white;
            text-decoration: none;
        }

        .no-data {
            text-align: center;
            padding: 60px 20px;
            color: #a0aec0;
        }

        .no-data i {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .spinner {
            text-align: center;
            padding: 40px;
            color: #a0aec0;
        }

        @media (max-width: 768px) {
            .application-card {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }

            .applicant-meta {
                flex-direction: column;
                gap: 8px;
            }

            .application-actions {
                width: 100%;
                margin-left: 0;
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1><i class="bi bi-file-earmark-text me-2"></i> All Applications</h1>
            <p>Review and manage applications from candidates</p>
        </div>

        <!-- Success/Error Messages -->
        <% if (locals.success) { %>
            <div class="alert alert-success">
                <i class="bi bi-check-circle"></i> <%= locals.success %>
            </div>
        <% } %>
        <% if (locals.error) { %>
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-circle"></i> <%= locals.error %>
            </div>
        <% } %>

        <!-- Applications Container -->
        <div id="applicationsContainer" class="applications-list">
            <div class="spinner">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>

    <script>
        // Load applications on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadAllApplications();
        });

        // Load all applications for recruiter's jobs
        async function loadAllApplications() {
            try {
                const response = await fetch('/jobs/my-applications');
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                const applications = data.data || [];

                if (applications.length === 0) {
                    showNoData();
                    return;
                }

                displayApplications(applications);
            } catch (error) {
                console.error('Error loading applications:', error);
                document.getElementById('applicationsContainer').innerHTML = `
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-circle"></i>
                        Failed to load applications. Please refresh the page.
                    </div>
                `;
            }
        }

        // Display applications
        function displayApplications(applications) {
            const container = document.getElementById('applicationsContainer');

            const appHTML = applications.map(app => {
                const statusClass = getStatusClass(app.status);
                const appliedDate = new Date(app.createdAt).toLocaleDateString();
                
                return `
                    <div class="application-card">
                        <div class="applicant-info">
                            <div class="applicant-name">${app.studentId?.name || 'Anonymous'}</div>
                            <div class="applicant-meta">
                                <div class="applicant-meta-item">
                                    <i class="bi bi-briefcase"></i>
                                    ${app.jobId?.title || 'Job Title'}
                                </div>
                                <div class="applicant-meta-item">
                                    <i class="bi bi-geo-alt"></i>
                                    ${app.jobId?.location || 'Location'}
                                </div>
                                <div class="applicant-meta-item">
                                    <i class="bi bi-calendar"></i>
                                    ${appliedDate}
                                </div>
                            </div>
                        </div>
                        <div style="display: flex; gap: 15px; align-items: center; flex-wrap: wrap;">
                            <span class="status-badge ${statusClass}">
                                ${formatStatus(app.status)}
                            </span>
                            <a href="/recruiter/view-application/${app._id}" class="btn btn-primary" style="margin: 0;">
                                <i class="bi bi-eye"></i> Review
                            </a>
                        </div>
                    </div>
                `;
            }).join('');

            container.innerHTML = appHTML;
        }

        function getStatusClass(status) {
            const normalized = (status || '').toLowerCase();
            const statusMap = {
                'applied': 'status-applied',
                'reviewed': 'status-reviewed',
                'shortlisted': 'status-shortlisted',
                'hired': 'status-hired',
                'rejected': 'status-rejected'
            };
            return statusMap[normalized] || 'status-applied';
        }

        function formatStatus(status) {
            const normalized = (status || '').toLowerCase();
            const labels = {
                'applied': 'Applied',
                'reviewed': 'Under Review',
                'shortlisted': 'Shortlisted',
                'hired': 'Hired',
                'rejected': 'Rejected'
            };
            return labels[normalized] || status;
        }

        function showNoData() {
            document.getElementById('applicationsContainer').innerHTML = `
                <div class="no-data">
                    <i class="bi bi-inbox"></i>
                    <h3>No Applications Yet</h3>
                    <p>Applications from candidates will appear here once they apply to your jobs</p>
                    <a href="/recruiter/dashboard" class="btn btn-primary" style="margin-top: 20px; display: inline-flex;">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            `;
        }
    </script>
</body>
</html>
