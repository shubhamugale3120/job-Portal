<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Post Job - Job Portal</title>
</head>
<body>
    <%- include('../partials/nav') %>
    
    <div class="container mt-4">
        <!-- Success/Error Messages from Query Parameters -->
        <% if (locals.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> <%= locals.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (locals.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i> <%= locals.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <h1 class="mb-4">Post a New Job</h1>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form id="postJobForm" action="/jobs" method="POST">
                            <!-- Job Title -->
                            <div class="mb-3">
                                <label for="title" class="form-label">Job Title <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="title" name="title" required
                                       placeholder="e.g., React Developer">
                                <div class="form-text">Minimum 5 characters, maximum 100 characters</div>
                            </div>

                            <!-- Job Description -->
                            <div class="mb-3">
                                <label for="description" class="form-label">Job Description <span class="text-danger">*</span></label>
                                <textarea class="form-control" id="description" name="description" rows="6" required
                                          placeholder="Describe the job requirements, responsibilities, and qualifications"></textarea>
                                <div class="form-text">Minimum 20 characters</div>
                            </div>

                            <!-- Location -->
                            <div class="mb-3">
                                <label for="location" class="form-label">Location <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="location" name="location" required
                                       placeholder="e.g., Mumbai, Bangalore, Remote">
                            </div>

                            <!-- Skills Required -->
                            <div class="mb-3">
                                <label for="skills" class="form-label">Skills Required <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="skills" name="skills" required
                                       placeholder="e.g., React, JavaScript, Node.js">
                                <div class="form-text">Enter skills separated by commas. At least one skill required.</div>
                            </div>

                            <!-- Job Type -->
                            <div class="mb-3">
                                <label for="jobType" class="form-label">Job Type</label>
                                <select class="form-select" id="jobType" name="jobType">
                                    <option value="Full-time" selected>Full-time</option>
                                    <option value="Part-time">Part-time</option>
                                    <option value="Contract">Contract</option>
                                    <option value="Internship">Internship</option>
                                </select>
                            </div>

                            <!-- Salary Range -->
                            <div class="mb-3">
                                <label for="salary" class="form-label">Salary Range (Optional)</label>
                                <input type="text" class="form-control" id="salary" name="salary"
                                       placeholder="e.g., 5-10 LPA, $50,000-$80,000">
                            </div>

                            <!-- Status -->
                            <div class="mb-3">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="Active" selected>Active (visible to candidates)</option>
                                    <option value="Closed">Closed (not accepting applications)</option>
                                </select>
                            </div>

                            <!-- Form Buttons -->
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="button" class="btn btn-secondary" onclick="window.location.href='/recruiter/dashboard'">
                                    Cancel
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <span class="spinner-border spinner-border-sm d-none" id="submitSpinner"></span>
                                    Post Job
                                </button>
                            </div>
                        </form>

                        <!-- Success/Error Message -->
                        <div id="messageContainer" class="mt-3"></div>
                    </div>
                </div>
            </div>

            <!-- Tips Section -->
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">Tips for Posting Jobs</h5>
                        <ul class="small">
                            <li>Write a clear and concise job title</li>
                            <li>Be specific about job requirements</li>
                            <li>List all required skills and qualifications</li>
                            <li>Mention salary range to attract right candidates</li>
                            <li>Include information about your company</li>
                            <li>Specify if remote work is available</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>

    <script>
        // Handle form submission
        document.getElementById('postJobForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            // Validate
            const title = document.getElementById('title').value.trim();
            const description = document.getElementById('description').value.trim();
            const skillsInput = document.getElementById('skills').value.trim();

            if (title.length < 5) {
                alert('Job title must be at least 5 characters');
                return;
            }

            if (description.length < 20) {
                alert('Job description must be at least 20 characters');
                return;
            }

            if (skillsInput.length === 0) {
                alert('At least one skill is required');
                return;
            }

            // Submit form normally for HTML page redirect
            e.target.submit();
        });
    </script>
</body>
</html>
