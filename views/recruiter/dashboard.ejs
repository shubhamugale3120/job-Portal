<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Recruiter Dashboard - Job Portal</title>
</head>
<body>
    <%- include('../partials/nav') %>
    
    <div class="container mt-4">
        <!-- Success/Error Messages from Query Parameters -->
        <% if (locals.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> <%= locals.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (locals.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i> <%= locals.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Recruiter Dashboard</h1>
            <a href="/recruiter/post-job" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Post New Job
            </a>
        </div>

        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Total Jobs Posted</h5>
                        <h2 id="totalJobs">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Active Jobs</h5>
                        <h2 id="activeJobs">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Total Applications</h5>
                        <h2 id="totalApplications">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Pending Review</h5>
                        <h2 id="pendingApplications">-</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs for different sections -->
        <ul class="nav nav-tabs mb-4" id="dashboardTabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#myJobs">My Jobs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#applications">Applications</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#profile">Company Profile</a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
            <!-- MY JOBS TAB -->
            <div class="tab-pane fade show active" id="myJobs">
                <h3>My Posted Jobs</h3>
                <div id="jobsContainer">
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- APPLICATIONS TAB -->
            <div class="tab-pane fade" id="applications">
                <h3>Recent Applications</h3>
                <div id="applicationsContainer">
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- PROFILE TAB -->
            <div class="tab-pane fade" id="profile">
                <h3>Company Profile</h3>
                <div id="profileContainer">
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
                <a href="/profile/edit" class="btn btn-primary mt-3">Edit Profile</a>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>

    <script>
        let myJobs = [];

        // Load data on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadMyJobs();
            loadProfile();
        });

        // Load recruiter's posted jobs
        async function loadMyJobs() {
            try {
                // Fetch all jobs and filter by current user
                const response = await fetch('/jobs');
                const result = await response.json();
                
                // Filter jobs posted by current recruiter (backend should handle this)
                myJobs = result.data || result;

                // Update stats
                document.getElementById('totalJobs').textContent = myJobs.length;
                document.getElementById('activeJobs').textContent = 
                    myJobs.filter(job => job.status === 'Active').length;

                // Display jobs
                displayJobs(myJobs);

                // Load applications for these jobs
                loadApplicationsForJobs();

            } catch (error) {
                console.error('Error loading jobs:', error);
                document.getElementById('jobsContainer').innerHTML = `
                    <div class="alert alert-danger">Failed to load jobs. Please try again.</div>
                `;
            }
        }

        // Display jobs in cards
        function displayJobs(jobs) {
            const container = document.getElementById('jobsContainer');

            if (!jobs || jobs.length === 0) {
                container.innerHTML = `
                    <div class="alert alert-info">
                        You haven't posted any jobs yet. 
                        <a href="/recruiter/post-job" class="alert-link">Post your first job</a>
                    </div>
                `;
                return;
            }

            const jobsHTML = jobs.map(job => `
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h5 class="card-title">${job.title}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <i class="bi bi-geo-alt"></i> ${job.location} | 
                                    <i class="bi bi-briefcase"></i> ${job.jobType} |
                                    <span class="badge bg-${job.status === 'Active' ? 'success' : 'secondary'}">${job.status}</span>
                                </h6>
                                <p class="card-text">${job.description.substring(0, 150)}...</p>
                                <div class="mb-2">
                                    ${job.skills.map(skill => `<span class="badge bg-secondary me-1">${skill}</span>`).join('')}
                                </div>
                                <p class="mb-2">
                                    <strong>Applications:</strong> ${job.applicationCount || 0}
                                </p>
                                <small class="text-muted">Posted on ${new Date(job.createdAt).toLocaleDateString()}</small>
                            </div>
                            <div class="btn-group-vertical ms-3">
                                <a href="/recruiter/view-applicants/${job._id}" class="btn btn-sm btn-primary">
                                    <i class="bi bi-people"></i> View Applications
                                </a>
                                <a href="/recruiter/edit-job/${job._id}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form action="/jobs/${job._id}" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this job?');">
                                    <button type="submit" class="btn btn-sm btn-danger w-100">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');

            container.innerHTML = jobsHTML;
        }

        // Load applications for all recruiter's jobs
        async function loadApplicationsForJobs() {
            try {
                let allApplications = [];
                
                // Load applications for each job
                for (const job of myJobs) {
                    try {
                        const response = await fetch(`/applications/job/${job._id}`);
                        const applications = await response.json();
                        allApplications = allApplications.concat(applications);
                    } catch (err) {
                        console.error(`Error loading applications for job ${job._id}:`, err);
                    }
                }

                // Update stats
                document.getElementById('totalApplications').textContent = allApplications.length;
                document.getElementById('pendingApplications').textContent = 
                    allApplications.filter(app => app.status === 'APPLIED').length;

                // Display applications
                displayApplications(allApplications);

            } catch (error) {
                console.error('Error loading applications:', error);
            }
        }

        // Display applications in table
        function displayApplications(applications) {
            const container = document.getElementById('applicationsContainer');

            if (!applications || applications.length === 0) {
                container.innerHTML = `
                    <div class="alert alert-info">No applications received yet.</div>
                `;
                return;
            }

            const tableHTML = `
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Candidate Name</th>
                            <th>Job Title</th>
                            <th>Applied Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${applications.map(app => `
                            <tr>
                                <td>${app.studentId.name}</td>
                                <td>${app.jobId.title}</td>
                                <td>${new Date(app.appliedAt).toLocaleDateString()}</td>
                                <td>${getStatusBadge(app.status)}</td>
                                <td>
                                    <button class="btn btn-sm btn-success" onclick="updateStatus('${app._id}', 'REVIEWED')">Review</button>
                                    <button class="btn btn-sm btn-primary" onclick="updateStatus('${app._id}', 'HIRED')">Hire</button>
                                    <button class="btn btn-sm btn-danger" onclick="updateStatus('${app._id}', 'REJECTED')">Reject</button>
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;

            container.innerHTML = tableHTML;
        }

        // Get status badge with color
        function getStatusBadge(status) {
            const badges = {
                'APPLIED': '<span class="badge bg-info">New Application</span>',
                'REVIEWED': '<span class="badge bg-warning">Under Review</span>',
                'REJECTED': '<span class="badge bg-danger">Rejected</span>',
                'HIRED': '<span class="badge bg-success">Hired</span>'
            };
            return badges[status] || status;
        }

        // Update application status
        async function updateStatus(applicationId, newStatus) {
            try {
                const response = await fetch(`/applications/${applicationId}/status`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ status: newStatus })
                });

                if (response.ok) {
                    alert('Status updated successfully!');
                    loadApplicationsForJobs(); // Reload applications
                } else {
                    alert('Failed to update status. Please try again.');
                }
            } catch (error) {
                console.error('Error updating status:', error);
                alert('An error occurred. Please try again.');
            }
        }

        // Load recruiter profile
        async function loadProfile() {
            try {
                const response = await fetch('/profile/me');
                const profile = await response.json();

                displayProfile(profile);

            } catch (error) {
                console.error('Error loading profile:', error);
                document.getElementById('profileContainer').innerHTML = `
                    <div class="alert alert-warning">
                        Profile not found. Please create your company profile.
                    </div>
                `;
            }
        }

        // Display profile information
        function displayProfile(profile) {
            const container = document.getElementById('profileContainer');

            const profileHTML = `
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Company Information</h5>
                        <p><strong>Company Name:</strong> ${profile.companyName || 'Not provided'}</p>
                        <p><strong>Website:</strong> ${profile.companyWebsite || 'Not provided'}</p>
                        <p><strong>Description:</strong> ${profile.companyDescription || 'Not provided'}</p>
                        <p><strong>Contact:</strong> ${profile.phoneNumber || 'Not provided'}</p>
                        <p><strong>Location:</strong> ${profile.city || 'Not provided'}</p>
                        <p><strong>Designation:</strong> ${profile.designation || 'Not provided'}</p>
                    </div>
                </div>
            `;

            container.innerHTML = profileHTML;
        }
    </script>
</body>
</html>
