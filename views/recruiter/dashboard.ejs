<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Recruiter Dashboard - Job Portal</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .dashboard-wrapper {
            padding: 30px 20px;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            color: white;
        }

        .dashboard-header h1 {
            font-size: 32px;
            font-weight: 700;
        }

        .header-actions {
            display: flex;
            gap: 15px;
        }

        .btn-post-job {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-post-job:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(56, 239, 125, 0.3);
            color: white;
        }

        .header-date {
            color: #a0aec0;
            font-size: 14px;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            border-radius: 15px;
            padding: 25px;
            color: white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s;
            border: 1px solid rgba(255,255,255,0.1);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.4);
        }

        .stat-card.green {
            border-top: 3px solid #11998e;
        }

        .stat-card.blue {
            border-top: 3px solid #667eea;
        }

        .stat-card.purple {
            border-top: 3px solid #764ba2;
        }

        .stat-card.pink {
            border-top: 3px solid #f5a623;
        }

        .stat-info h3 {
            font-size: 14px;
            color: #a0aec0;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-info h2 {
            font-size: 36px;
            font-weight: 700;
            color: white;
        }

        .stat-chart {
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .circular-progress {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 20px;
            position: relative;
        }

        .circular-progress.progress-green {
            background: conic-gradient(#11998e 0deg, #11998e 220deg, #2d3748 220deg);
        }

        .circular-progress.progress-blue {
            background: conic-gradient(#667eea 0deg, #667eea 270deg, #2d3748 270deg);
        }

        .circular-progress.progress-purple {
            background: conic-gradient(#764ba2 0deg, #764ba2 180deg, #2d3748 180deg);
        }

        .circular-progress.progress-pink {
            background: conic-gradient(#f5a623 0deg, #f5a623 130deg, #2d3748 130deg);
        }

        .circular-inner {
            width: 85%;
            height: 85%;
            background: #1a202c;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Content Section */
        .content-section {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            border-radius: 15px;
            padding: 30px;
            color: white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            border: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 30px;
        }

        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .content-header h2 {
            font-size: 22px;
            font-weight: 700;
            color: white;
        }

        .btn-view-all {
            background: #11998e;
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 13px;
            transition: all 0.3s;
        }

        .btn-view-all:hover {
            background: #38ef7d;
            transform: translateY(-2px);
        }

        /* Job Card List */
        .jobs-list {
            display: grid;
            gap: 15px;
        }

        .job-item {
            background: rgba(255,255,255,0.05);
            border-radius: 10px;
            padding: 18px;
            border: 1px solid rgba(255,255,255,0.1);
            transition: all 0.3s;
        }

        .job-item:hover {
            background: rgba(255,255,255,0.08);
            border-color: rgba(255,255,255,0.2);
            transform: translateX(5px);
        }

        .job-title {
            font-weight: 700;
            color: white;
            font-size: 16px;
            margin-bottom: 8px;
        }

        .job-meta {
            display: flex;
            gap: 20px;
            font-size: 12px;
            color: #a0aec0;
            margin-bottom: 12px;
        }

        .job-meta-item {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .job-actions {
            display: flex;
            gap: 10px;
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        .job-action-btn {
            background: rgba(17, 153, 142, 0.2);
            color: #38ef7d;
            border: none;
            padding: 6px 12px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            font-size: 12px;
            transition: all 0.3s;
        }

        .job-action-btn:hover {
            background: #11998e;
            color: white;
        }

        .job-action-btn.delete {
            background: rgba(245, 87, 108, 0.2);
            color: #f5576c;
        }

        .job-action-btn.delete:hover {
            background: #f5576c;
            color: white;
        }

        /* Application Item */
        .application-item {
            background: rgba(255,255,255,0.05);
            border-radius: 10px;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(255,255,255,0.1);
            transition: all 0.3s;
        }

        .application-item:hover {
            background: rgba(255,255,255,0.08);
            border-color: rgba(255,255,255,0.2);
        }

        .app-title {
            font-weight: 600;
            color: white;
            margin-bottom: 5px;
        }

        .app-meta {
            font-size: 12px;
            color: #a0aec0;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-applied {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
        }

        .status-reviewed {
            background: rgba(240, 174, 74, 0.2);
            color: #f0ae4a;
        }

        .status-shortlisted {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .status-hired {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .status-rejected {
            background: rgba(245, 87, 108, 0.2);
            color: #f5576c;
        }

        /* Alert Styling */
        .alert {
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 25px;
            border: none;
            background: rgba(255,255,255,0.1);
            color: white;
            border-left: 4px solid;
        }

        .alert-success {
            border-left-color: #38ef7d;
            background: rgba(56, 239, 125, 0.1);
        }

        .alert-danger {
            border-left-color: #f5576c;
            background: rgba(245, 87, 108, 0.1);
        }

        .no-data {
            text-align: center;
            padding: 40px 20px;
            color: #a0aec0;
        }

        .no-data i {
            font-size: 48px;
            margin-bottom: 15px;
            opacity: 0.5;
        }

        @media (max-width: 768px) {
            .dashboard-header {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }

            .header-actions {
                width: 100%;
                justify-content: center;
            }

            .btn-post-job {
                width: 100%;
                justify-content: center;
            }

            .stat-card {
                flex-direction: column;
                text-align: center;
            }

            .stat-chart {
                margin-top: 15px;
            }

            .content-header {
                flex-direction: column;
                gap: 15px;
            }

            .job-meta {
                flex-direction: column;
                gap: 8px;
            }

            .job-actions {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/nav') %>
    
    <div class="dashboard-wrapper">
        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <div>
                <h1>Dashboard</h1>
            </div>
            <div class="header-actions">
                <a href="/recruiter/post-job" class="btn-post-job">
                    <i class="bi bi-plus-circle"></i> Post New Job
                </a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        <% if (locals.success) { %>
            <div class="alert alert-success">
                <i class="bi bi-check-circle"></i> <%= locals.success %>
            </div>
        <% } %>
        <% if (locals.error) { %>
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-circle"></i> <%= locals.error %>
            </div>
        <% } %>

        <!-- Stats Cards Grid -->
        <div class="stats-grid">
            <!-- Total Jobs -->
            <div class="stat-card green">
                <div class="stat-info">
                    <h3>Total Jobs</h3>
                    <h2 id="totalJobs">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-green">
                        <div class="circular-inner">75%</div>
                    </div>
                </div>
            </div>

            <!-- Active Jobs -->
            <div class="stat-card blue">
                <div class="stat-info">
                    <h3>Active Jobs</h3>
                    <h2 id="activeJobs">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-blue">
                        <div class="circular-inner">85%</div>
                    </div>
                </div>
            </div>

            <!-- Total Applications -->
            <div class="stat-card purple">
                <div class="stat-info">
                    <h3>Applications</h3>
                    <h2 id="totalApplications">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-purple">
                        <div class="circular-inner">60%</div>
                    </div>
                </div>
            </div>

            <!-- Pending Review -->
            <div class="stat-card pink">
                <div class="stat-info">
                    <h3>Pending Review</h3>
                    <h2 id="pendingApplications">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-pink">
                        <div class="circular-inner">45%</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- My Jobs Section -->
        <div class="content-section">
            <div class="content-header">
                <h2><i class="bi bi-briefcase me-2"></i> My Posted Jobs</h2>
                <a href="/recruiter/my-jobs" class="btn-view-all">View All</a>
            </div>
            <div id="jobsContainer" class="jobs-list">
                <div class="no-data">
                    <i class="bi bi-briefcase"></i>
                    <p>No jobs posted yet. Post a new job to get started!</p>
                </div>
            </div>
        </div>

        <!-- Recent Applications Section -->
        <div class="content-section">
            <div class="content-header">
                <h2><i class="bi bi-file-earmark-text me-2"></i> Recent Applications</h2>
                <a href="/recruiter/applications" class="btn-view-all">View All</a>
            </div>
            <div id="applicationsContainer" class="applications-list">
                <div class="no-data">
                    <i class="bi bi-inbox"></i>
                    <p>No applications received yet.</p>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>

    <script>
        // Load data on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadDashboardData();
        });

        // Load recruiter dashboard data
        async function loadDashboardData() {
            try {
                // Get all jobs posted by this recruiter
                const jobsResponse = await fetch('/jobs/my-jobs');
                
                if (!jobsResponse.ok) {
                    throw new Error(`Failed to load jobs: ${jobsResponse.status}`);
                }
                
                const jobsData = await jobsResponse.json();
                const jobs = jobsData.data || [];

                // Update job stats
                document.getElementById('totalJobs').textContent = jobs.length;
                document.getElementById('activeJobs').textContent = 
                    jobs.filter(job => job.status === 'Active').length;

                // Display recent jobs
                displayRecentJobs(jobs);

                // Load applications
                loadApplications();

            } catch (error) {
                console.error('Error loading jobs:', error);
                document.getElementById('totalJobs').textContent = '0';
                document.getElementById('activeJobs').textContent = '0';
                document.getElementById('jobsContainer').innerHTML = `
                    <div class="no-data">
                        <i class="bi bi-exclamation-circle"></i>
                        <p>Failed to load jobs. Please refresh the page.</p>
                    </div>
                `;
            }
        }

        // Display recent jobs (max 5)
        function displayRecentJobs(jobs) {
            const container = document.getElementById('jobsContainer');

            if (!jobs || jobs.length === 0) {
                container.innerHTML = `
                    <div class="no-data">
                        <i class="bi bi-briefcase"></i>
                        <p>No jobs posted yet. Post a new job to get started!</p>
                    </div>
                `;
                return;
            }

            const recentJobs = jobs.slice(0, 5);
            const jobsHTML = recentJobs.map(job => `
                <div class="job-item">
                    <div class="job-title">${job.title}</div>
                    <div class="job-meta">
                        <div class="job-meta-item">
                            <i class="bi bi-geo-alt"></i>
                            ${job.location}
                        </div>
                        <div class="job-meta-item">
                            <i class="bi bi-briefcase"></i>
                            ${job.jobType}
                        </div>
                        <div class="job-meta-item">
                            <i class="bi bi-calendar"></i>
                            ${new Date(job.createdAt).toLocaleDateString()}
                        </div>
                        <div class="job-meta-item">
                            <span class="status-badge" style="background: ${job.status === 'Active' ? 'rgba(56, 239, 125, 0.2)' : 'rgba(245, 87, 108, 0.2)'}; color: ${job.status === 'Active' ? '#38ef7d' : '#f5576c'};">
                                ${job.status}
                            </span>
                        </div>
                    </div>
                    <div class="job-actions">
                        <a href="/recruiter/view-applicants/${job._id}" class="job-action-btn">
                            <i class="bi bi-people"></i> View Applicants
                        </a>
                        <a href="/recruiter/edit-job/${job._id}" class="job-action-btn">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form action="/jobs/${job._id}/delete" method="POST" style="display: inline;" 
                              onsubmit="return confirm('Are you sure you want to delete this job?');">
                            <button type="submit" class="job-action-btn delete">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            `).join('');

            container.innerHTML = jobsHTML;
        }

        // Load applications for all jobs
        async function loadApplications() {
            try {
                const applicationsResponse = await fetch('/jobs/my-applications');
                
                if (!applicationsResponse.ok) {
                    throw new Error(`Failed to load applications: ${applicationsResponse.status}`);
                }
                
                const applicationsData = await applicationsResponse.json();
                const allApplications = applicationsData.data || [];

                // Update application stats
                document.getElementById('totalApplications').textContent = allApplications.length;
                document.getElementById('pendingApplications').textContent = 
                    allApplications.filter(app => app.status === 'applied').length;

                // Display recent applications
                displayRecentApplications(allApplications);

            } catch (error) {
                console.error('Error loading applications:', error);
                document.getElementById('totalApplications').textContent = '0';
                document.getElementById('pendingApplications').textContent = '0';
                document.getElementById('applicationsContainer').innerHTML = `
                    <div class="no-data">
                        <i class="bi bi-inbox"></i>
                        <p>No applications received yet.</p>
                    </div>
                `;
            }
        }

        // Display recent applications (max 5)
        function displayRecentApplications(applications) {
            const container = document.getElementById('applicationsContainer');

            if (!applications || applications.length === 0) {
                container.innerHTML = `
                    <div class="no-data">
                        <i class="bi bi-inbox"></i>
                        <p>No applications received yet.</p>
                    </div>
                `;
                return;
            }

            const recentApps = applications.slice(0, 5);
            const applicationsHTML = recentApps.map(app => {
                const statusClass = getStatusClass(app.status);
                const statusLabel = (app.status || '').toLowerCase();
                return `
                    <div class="application-item">
                        <div>
                            <div class="app-title">${app.studentId?.name || 'Anonymous'}</div>
                            <div class="app-meta">
                                <i class="bi bi-briefcase me-2"></i> Applied for: ${app.jobId?.title || 'Job Title'}
                                <span class="mx-2">â€¢</span>
                                <i class="bi bi-calendar me-2"></i> ${new Date(app.createdAt).toLocaleDateString()}
                            </div>
                        </div>
                        <span class="status-badge ${statusClass}">${statusLabel ? statusLabel.charAt(0).toUpperCase() + statusLabel.slice(1) : 'Applied'}</span>
                    </div>
                `;
            }).join('');

            container.innerHTML = applicationsHTML;
        }

        // Get status class for applications
        function getStatusClass(status) {
            const normalized = (status || '').toLowerCase();
            const statusMap = {
                'applied': 'status-applied',
                'reviewed': 'status-reviewed',
                'shortlisted': 'status-shortlisted',
                'hired': 'status-hired',
                'rejected': 'status-rejected'
            };
            return statusMap[normalized] || 'status-applied';
        }
    </script>
</body>
</html>
