<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Student Dashboard - Job Portal</title>
</head>
<body>
    <%- include('../partials/nav') %>
    
    <div class="container mt-4">
        <!-- Success/Error Messages from Query Parameters -->
        <% if (locals.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> <%= locals.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (locals.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i> <%= locals.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <h1 class="mb-4">Student Dashboard</h1>

        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Total Applications</h5>
                        <h2 id="totalApplications">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Shortlisted</h5>
                        <h2 id="shortlistedCount">-</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Pending Review</h5>
                        <h2 id="pendingCount">-</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs for different sections -->
        <ul class="nav nav-tabs mb-4" id="dashboardTabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#applications">My Applications</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#browseJobs">Browse Jobs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#profile">My Profile</a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
            <!-- MY APPLICATIONS TAB -->
            <div class="tab-pane fade show active" id="applications">
                <h3>My Applications</h3>
                <div id="applicationsContainer">
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- BROWSE JOBS TAB -->
            <div class="tab-pane fade" id="browseJobs">
                <h3>Quick Job Search</h3>
                <p>Looking for new opportunities? <a href="/jobs/browse" class="btn btn-primary">Browse All Jobs</a></p>
            </div>

            <!-- PROFILE TAB -->
            <div class="tab-pane fade" id="profile">
                <h3>My Profile</h3>
                <div id="profileContainer">
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
                <a href="/profile/edit" class="btn btn-primary mt-3">Edit Profile</a>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>

    <script>
        // Load data on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadApplications();
            loadProfile();
        });

        // Load student applications
        async function loadApplications() {
            try {
                const response = await fetch('/applications/me');
                const applications = await response.json();

                // Update stats
                document.getElementById('totalApplications').textContent = applications.length;
                document.getElementById('shortlistedCount').textContent = 
                    applications.filter(app => app.status === 'REVIEWED' || app.status === 'HIRED').length;
                document.getElementById('pendingCount').textContent = 
                    applications.filter(app => app.status === 'APPLIED').length;

                // Display applications
                displayApplications(applications);

            } catch (error) {
                console.error('Error loading applications:', error);
                document.getElementById('applicationsContainer').innerHTML = `
                    <div class="alert alert-danger">Failed to load applications. Please try again.</div>
                `;
            }
        }

        // Display applications in table
        function displayApplications(applications) {
            const container = document.getElementById('applicationsContainer');

            if (!applications || applications.length === 0) {
                container.innerHTML = `
                    <div class="alert alert-info">
                        You haven't applied to any jobs yet. 
                        <a href="/jobs/browse" class="alert-link">Browse Jobs</a>
                    </div>
                `;
                return;
            }

            const tableHTML = `
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Job Title</th>
                            <th>Company</th>
                            <th>Applied Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${applications.map(app => `
                            <tr>
                                <td>${app.jobId.title}</td>
                                <td>${app.jobId.location}</td>
                                <td>${new Date(app.appliedAt).toLocaleDateString()}</td>
                                <td>${getStatusBadge(app.status)}</td>
                                <td>
                                    <a href="/jobs/${app.jobId._id}" class="btn btn-sm btn-primary">View Job</a>
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;

            container.innerHTML = tableHTML;
        }

        // Get status badge with color
        function getStatusBadge(status) {
            const badges = {
                'APPLIED': '<span class="badge bg-info">Applied</span>',
                'REVIEWED': '<span class="badge bg-warning">Under Review</span>',
                'REJECTED': '<span class="badge bg-danger">Rejected</span>',
                'HIRED': '<span class="badge bg-success">Hired</span>'
            };
            return badges[status] || status;
        }

        // Load student profile
        async function loadProfile() {
            try {
                const response = await fetch('/profile/me');
                const profile = await response.json();

                displayProfile(profile);

            } catch (error) {
                console.error('Error loading profile:', error);
                document.getElementById('profileContainer').innerHTML = `
                    <div class="alert alert-warning">
                        Profile not found. Please create your profile to apply for jobs.
                    </div>
                `;
            }
        }

        // Display profile information
        function displayProfile(profile) {
            const container = document.getElementById('profileContainer');

            const profileHTML = `
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Profile Information</h5>
                        <p><strong>Phone:</strong> ${profile.phoneNumber || 'Not provided'}</p>
                        <p><strong>City:</strong> ${profile.city || 'Not provided'}</p>
                        <p><strong>Bio:</strong> ${profile.bio || 'Not provided'}</p>
                        <p><strong>Skills:</strong></p>
                        <div class="mb-3">
                            ${profile.skills ? profile.skills.map(skill => 
                                `<span class="badge bg-secondary me-1">${skill}</span>`
                            ).join('') : 'No skills added'}
                        </div>
                        <p><strong>Resume:</strong> 
                            ${profile.resumeUrl ? 
                                `<a href="${profile.resumeUrl}" target="_blank" class="btn btn-sm btn-primary">View Resume</a>` : 
                                'Not uploaded'}
                        </p>
                    </div>
                </div>
            `;

            container.innerHTML = profileHTML;
        }
    </script>
</body>
</html>
