<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Student Dashboard - Job Portal</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #1a2a4e 0%, #16213e 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .dashboard-wrapper {
            padding: 30px 20px;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            color: white;
        }

        .dashboard-header h1 {
            font-size: 32px;
            font-weight: 700;
        }

        .header-date {
            color: #a0aec0;
            font-size: 14px;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            border-radius: 15px;
            padding: 25px;
            color: white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s;
            border: 1px solid rgba(255,255,255,0.1);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.4);
        }

        .stat-card.purple {
            border-top: 3px solid #667eea;
        }

        .stat-card.green {
            border-top: 3px solid #38ef7d;
        }

        .stat-card.orange {
            border-top: 3px solid #f5a623;
        }

        .stat-info h3 {
            font-size: 14px;
            color: #a0aec0;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-info h2 {
            font-size: 36px;
            font-weight: 700;
            color: white;
        }

        .stat-chart {
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .circular-progress {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 20px;
            position: relative;
        }

        .circular-progress.progress-purple {
            background: conic-gradient(#667eea 0deg, #667eea 216deg, #2d3748 216deg);
        }

        .circular-progress.progress-green {
            background: conic-gradient(#38ef7d 0deg, #38ef7d 180deg, #2d3748 180deg);
        }

        .circular-progress.progress-orange {
            background: conic-gradient(#f5a623 0deg, #f5a623 102deg, #2d3748 102deg);
        }

        .circular-inner {
            width: 85%;
            height: 85%;
            background: #1a202c;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Content Section */
        .content-section {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            border-radius: 15px;
            padding: 30px;
            color: white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            border: 1px solid rgba(255,255,255,0.1);
        }

        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .content-header h2 {
            font-size: 22px;
            font-weight: 700;
            color: white;
        }

        .btn-view-all {
            background: #667eea;
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 13px;
            transition: all 0.3s;
        }

        .btn-view-all:hover {
            background: #764ba2;
            transform: translateY(-2px);
        }

        /* Applications List */
        .applications-list {
            display: grid;
            gap: 15px;
        }

        .application-item {
            background: rgba(255,255,255,0.05);
            border-radius: 10px;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(255,255,255,0.1);
            transition: all 0.3s;
        }

        .application-item:hover {
            background: rgba(255,255,255,0.08);
            border-color: rgba(255,255,255,0.2);
        }

        .app-title {
            font-weight: 600;
            color: white;
            margin-bottom: 5px;
        }

        .app-meta {
            font-size: 12px;
            color: #a0aec0;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-applied {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
        }

        .status-reviewed {
            background: rgba(240, 174, 74, 0.2);
            color: #f0ae4a;
        }

        .status-shortlisted {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .status-hired {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .status-rejected {
            background: rgba(245, 87, 108, 0.2);
            color: #f5576c;
        }

        /* Alert Styling */
        .alert {
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 25px;
            border: none;
            background: rgba(255,255,255,0.1);
            color: white;
            border-left: 4px solid;
        }

        .alert-success {
            border-left-color: #38ef7d;
            background: rgba(56, 239, 125, 0.1);
        }

        .alert-danger {
            border-left-color: #f5576c;
            background: rgba(245, 87, 108, 0.1);
        }

        .no-data {
            text-align: center;
            padding: 40px 20px;
            color: #a0aec0;
        }

        .no-data i {
            font-size: 48px;
            margin-bottom: 15px;
            opacity: 0.5;
        }

        @media (max-width: 768px) {
            .dashboard-header {
                flex-direction: column;
                text-align: center;
                gap: 10px;
            }

            .stat-card {
                flex-direction: column;
                text-align: center;
            }

            .stat-chart {
                margin-top: 15px;
            }

            .content-header {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/nav') %>
    
    <div class="dashboard-wrapper">
        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <div>
                <h1>Dashboard</h1>
            </div>
            <div class="header-date" id="currentDate"></div>
        </div>

        <!-- Success/Error Messages -->
        <% if (locals.success) { %>
            <div class="alert alert-success">
                <i class="bi bi-check-circle"></i> <%= locals.success %>
            </div>
        <% } %>
        <% if (locals.error) { %>
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-circle"></i> <%= locals.error %>
            </div>
        <% } %>

        <!-- Stats Cards Grid -->
        <div class="stats-grid">
            <!-- Total Applications -->
            <div class="stat-card purple">
                <div class="stat-info">
                    <h3>Applications</h3>
                    <h2 id="totalApplications">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-purple">
                        <div class="circular-inner">60%</div>
                    </div>
                </div>
            </div>

            <!-- Shortlisted -->
            <div class="stat-card green">
                <div class="stat-info">
                    <h3>Shortlisted</h3>
                    <h2 id="shortlistedCount">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-green">
                        <div class="circular-inner">50%</div>
                    </div>
                </div>
            </div>

            <!-- Pending Review -->
            <div class="stat-card orange">
                <div class="stat-info">
                    <h3>Pending Review</h3>
                    <h2 id="pendingCount">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-orange">
                        <div class="circular-inner">34%</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="content-section">
            <div class="content-header">
                <h2><i class="bi bi-file-earmark-text me-2"></i> Recent Applications</h2>
                <a href="/student/my-applications" class="btn-view-all">View All</a>
            </div>

            <div id="applicationsContainer" class="applications-list">
                <div class="no-data">
                    <i class="bi bi-inbox"></i>
                    <p>No applications yet. Start applying to jobs!</p>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>

    <script>
        // Set current date
        document.getElementById('currentDate').textContent = new Date().toLocaleDateString('en-US', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });

        // Load data on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadApplications();
        });

        // Load student applications
        async function loadApplications() {
            try {
                const response = await fetch('/applications/me');
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const applications = await response.json();

                if (!Array.isArray(applications) || applications.length === 0) {
                    document.getElementById('totalApplications').textContent = '0';
                    document.getElementById('shortlistedCount').textContent = '0';
                    document.getElementById('pendingCount').textContent = '0';
                    
                    showNoData();
                    return;
                }

                // Update stats
                document.getElementById('totalApplications').textContent = applications.length;
                
                const shortlisted = applications.filter(app => app.status === 'shortlisted').length;
                document.getElementById('shortlistedCount').textContent = shortlisted;
                
                const pending = applications.filter(app => app.status === 'applied').length;
                document.getElementById('pendingCount').textContent = pending;

                // Display recent applications (max 5)
                const recentApps = applications.slice(0, 5);
                
                if (recentApps.length === 0) {
                    showNoData();
                    return;
                }

                const container = document.getElementById('applicationsContainer');
                container.innerHTML = recentApps.map(app => {
                    const statusClass = getStatusClass(app.status);
                    const appliedDate = new Date(app.appliedAt).toLocaleDateString();
                    
                    return `
                        <div class="application-item">
                            <div>
                                <div class="app-title">${app.jobId?.title || 'Job Title Not Found'}</div>
                                <div class="app-meta">
                                    <i class="bi bi-calendar me-2"></i> Applied on ${appliedDate}
                                    <span class="mx-2">â€¢</span>
                                    <i class="bi bi-geo-alt me-2"></i> ${app.jobId?.location || 'Location'}
                                </div>
                            </div>
                            <span class="status-badge ${statusClass}">${app.status.charAt(0).toUpperCase() + app.status.slice(1)}</span>
                        </div>
                    `;
                }).join('');
            } catch (error) {
                console.error('Error loading applications:', error);
                document.getElementById('totalApplications').textContent = '0';
                document.getElementById('shortlistedCount').textContent = '0';
                document.getElementById('pendingCount').textContent = '0';
                showNoData();
            }
        }

        function getStatusClass(status) {
            const statusMap = {
                'applied': 'status-applied',
                'reviewed': 'status-reviewed',
                'shortlisted': 'status-shortlisted',
                'hired': 'status-hired',
                'rejected': 'status-rejected'
            };
            return statusMap[status] || 'status-applied';
        }

        function showNoData() {
            document.getElementById('applicationsContainer').innerHTML = `
                <div class="no-data">
                    <i class="bi bi-inbox"></i>
                    <p>No applications yet. Start applying to jobs!</p>
                </div>
            `;
        }
    </script>
</body>
</html>
