<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Student Dashboard - Job Portal</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #1a2a4e 0%, #16213e 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .dashboard-wrapper {
            padding: 30px 20px;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            color: white;
        }

        .dashboard-header h1 {
            font-size: 32px;
            font-weight: 700;
        }

        .header-date {
            color: #a0aec0;
            font-size: 14px;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            border-radius: 15px;
            padding: 25px;
            color: white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s;
            border: 1px solid rgba(255,255,255,0.1);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.4);
        }

        .stat-card.purple {
            border-top: 3px solid #667eea;
        }

        .stat-card.green {
            border-top: 3px solid #38ef7d;
        }

        .stat-card.orange {
            border-top: 3px solid #f5a623;
        }

        .stat-info h3 {
            font-size: 14px;
            color: #a0aec0;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-info h2 {
            font-size: 36px;
            font-weight: 700;
            color: white;
        }

        .stat-chart {
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .circular-progress {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 20px;
            position: relative;
        }

        .circular-progress.progress-purple {
            background: conic-gradient(#667eea 0deg, #667eea 216deg, #2d3748 216deg);
        }

        .circular-progress.progress-green {
            background: conic-gradient(#38ef7d 0deg, #38ef7d 180deg, #2d3748 180deg);
        }

        .circular-progress.progress-orange {
            background: conic-gradient(#f5a623 0deg, #f5a623 102deg, #2d3748 102deg);
        }

        .circular-inner {
            width: 85%;
            height: 85%;
            background: #1a202c;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Content Section */
        .content-section {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            border-radius: 15px;
            padding: 30px;
            color: white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            border: 1px solid rgba(255,255,255,0.1);
        }

        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .content-header h2 {
            font-size: 22px;
            font-weight: 700;
            color: white;
        }

        .btn-view-all {
            background: #667eea;
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 13px;
            transition: all 0.3s;
        }

        .btn-view-all:hover {
            background: #764ba2;
            transform: translateY(-2px);
        }

        /* Applications List */
        .applications-list {
            display: grid;
            gap: 15px;
        }

        .application-item {
            background: rgba(255,255,255,0.05);
            border-radius: 10px;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(255,255,255,0.1);
            transition: all 0.3s;
        }

        .application-item:hover {
            background: rgba(255,255,255,0.08);
            border-color: rgba(255,255,255,0.2);
        }

        .app-title {
            font-weight: 600;
            color: white;
            margin-bottom: 5px;
        }

        .app-meta {
            font-size: 12px;
            color: #a0aec0;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-applied {
            background: rgba(102, 126, 234, 0.2);
            color: #667eea;
        }

        .status-reviewed {
            background: rgba(240, 174, 74, 0.2);
            color: #f0ae4a;
        }

        .status-shortlisted {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .status-hired {
            background: rgba(56, 239, 125, 0.2);
            color: #38ef7d;
        }

        .status-rejected {
            background: rgba(245, 87, 108, 0.2);
            color: #f5576c;
        }

        /* Alert Styling */
        .alert {
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 25px;
            border: none;
            background: rgba(255,255,255,0.1);
            color: white;
            border-left: 4px solid;
        }

        .alert-success {
            border-left-color: #38ef7d;
            background: rgba(56, 239, 125, 0.1);
        }

        .alert-danger {
            border-left-color: #f5576c;
            background: rgba(245, 87, 108, 0.1);
        }

        .no-data {
            text-align: center;
            padding: 40px 20px;
            color: #a0aec0;
        }

        .no-data i {
            font-size: 48px;
            margin-bottom: 15px;
            opacity: 0.5;
        }

        @media (max-width: 768px) {
            .dashboard-header {
                flex-direction: column;
                text-align: center;
                gap: 10px;
            }

            .stat-card {
                flex-direction: column;
                text-align: center;
            }

            .stat-chart {
                margin-top: 15px;
            }

            .content-header {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/nav') %>
    
    <div class="dashboard-wrapper">
        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <div>
                <h1>Dashboard</h1>
            </div>
            <div class="header-date" id="currentDate"></div>
        </div>

        <!-- Success/Error Messages -->
        <% if (locals.success) { %>
            <div class="alert alert-success">
                <i class="bi bi-check-circle"></i> <%= locals.success %>
            </div>
        <% } %>
        <% if (locals.error) { %>
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-circle"></i> <%= locals.error %>
            </div>
        <% } %>

        <!-- Stats Cards Grid -->
        <div class="stats-grid">
            <!-- Total Applications -->
            <div class="stat-card purple">
                <div class="stat-info">
                    <h3>Applications</h3>
                    <h2 id="totalApplications">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-purple">
                        <div class="circular-inner">60%</div>
                    </div>
                </div>
            </div>

            <!-- Shortlisted -->
            <div class="stat-card green">
                <div class="stat-info">
                    <h3>Shortlisted</h3>
                    <h2 id="shortlistedCount">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-green">
                        <div class="circular-inner">50%</div>
                    </div>
                </div>
            </div>

            <!-- Pending Review -->
            <div class="stat-card orange">
                <div class="stat-info">
                    <h3>Pending Review</h3>
                    <h2 id="pendingCount">0</h2>
                </div>
                <div class="stat-chart">
                    <div class="circular-progress progress-orange">
                        <div class="circular-inner">34%</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- AI Recommended Jobs Section -->
        <div class="content-section" style="margin-bottom: 30px;">
            <div class="content-header">
                <h2><i class="bi bi-robot me-2"></i> AI Recommended Jobs For You</h2>
                <a href="/jobs/browse" class="btn-view-all">Browse All Jobs</a>
            </div>
            
            <div id="recommendationsContainer" style="margin-top: 20px;">
                <div class="text-center" style="padding: 40px;">
                    <div class="spinner-border text-light" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p style="color: #a0aec0; margin-top: 15px;">Analyzing your profile...</p>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="content-section">
            <div class="content-header">
                <h2><i class="bi bi-file-earmark-text me-2"></i> Recent Applications</h2>
                <a href="/student/my-applications" class="btn-view-all">View All</a>
            </div>

            <div id="applicationsContainer" class="applications-list">
                <div class="no-data">
                    <i class="bi bi-inbox"></i>
                    <p>No applications yet. Start applying to jobs!</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Job Details Modal -->
    <div class="modal fade" id="jobDetailsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%); border: 1px solid rgba(255,255,255,0.1);">
                <div class="modal-header" style="border-bottom: 1px solid rgba(255,255,255,0.1);">
                    <h5 class="modal-title" style="color: white;">Job Details</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="jobDetailsContent" style="color: #e2e8f0;">
                    <!-- Content loaded dynamically -->
                </div>
                <div class="modal-footer" style="border-top: 1px solid rgba(255,255,255,0.1);">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Apply Modal -->
    <div class="modal fade" id="applyModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%); border: 1px solid rgba(255,255,255,0.1);">
                <div class="modal-header" style="border-bottom: 1px solid rgba(255,255,255,0.1);">
                    <h5 class="modal-title" style="color: white;">Apply for Job</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6 style="color: #38ef7d; margin-bottom: 20px;" id="applyJobTitle">Job Title</h6>
                    
                    <form id="applyForm">
                        <input type="hidden" id="applyJobId">
                        
                        <div class="mb-3">
                            <label for="resumeUrl" class="form-label" style="color: #e2e8f0;">Resume URL <span class="text-danger">*</span></label>
                            <input type="url" class="form-control" id="resumeUrl" required 
                                   placeholder="https://drive.google.com/..." 
                                   style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); color: white;">
                            <small style="color: #a0aec0;">Provide a link to your resume (Google Drive, Dropbox, etc.)</small>
                        </div>
                        
                        <div class="mb-3">
                            <label for="coverLetter" class="form-label" style="color: #e2e8f0;">Cover Letter (Optional)</label>
                            <textarea class="form-control" id="coverLetter" rows="4" 
                                      placeholder="Why are you interested in this position?"
                                      style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); color: white;"></textarea>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn" 
                                    style="background: linear-gradient(135deg, #38ef7d 0%, #11998e 100%); color: white; font-weight: 600;">
                                <i class="bi bi-send"></i> Submit Application
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>

    <script>
        // Set current date
        document.getElementById('currentDate').textContent = new Date().toLocaleDateString('en-US', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });

        // Load data on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadApplications();
        });

        // Load student applications
        async function loadApplications() {
            try {
                const response = await fetch('/applications/me');
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const applications = await response.json();

                if (!Array.isArray(applications) || applications.length === 0) {
                    document.getElementById('totalApplications').textContent = '0';
                    document.getElementById('shortlistedCount').textContent = '0';
                    document.getElementById('pendingCount').textContent = '0';
                    
                    showNoData();
                    return;
                }

                // Update stats
                document.getElementById('totalApplications').textContent = applications.length;
                
                const shortlisted = applications.filter(app => app.status === 'shortlisted').length;
                document.getElementById('shortlistedCount').textContent = shortlisted;
                
                const pending = applications.filter(app => app.status === 'applied').length;
                document.getElementById('pendingCount').textContent = pending;

                // Display recent applications (max 5)
                const recentApps = applications.slice(0, 5);
                
                if (recentApps.length === 0) {
                    showNoData();
                    return;
                }

                const container = document.getElementById('applicationsContainer');
                container.innerHTML = recentApps.map(app => {
                    const statusClass = getStatusClass(app.status);
                    const appliedDate = new Date(app.appliedAt).toLocaleDateString();
                    
                    return `
                        <div class="application-item">
                            <div>
                                <div class="app-title">${app.jobId?.title || 'Job Title Not Found'}</div>
                                <div class="app-meta">
                                    <i class="bi bi-calendar me-2"></i> Applied on ${appliedDate}
                                    <span class="mx-2">•</span>
                                    <i class="bi bi-geo-alt me-2"></i> ${app.jobId?.location || 'Location'}
                                </div>
                            </div>
                            <span class="status-badge ${statusClass}">${app.status.charAt(0).toUpperCase() + app.status.slice(1)}</span>
                        </div>
                    `;
                }).join('');
            } catch (error) {
                console.error('Error loading applications:', error);
                document.getElementById('totalApplications').textContent = '0';
                document.getElementById('shortlistedCount').textContent = '0';
                document.getElementById('pendingCount').textContent = '0';
                showNoData();
            }
        }

        function getStatusClass(status) {
            const statusMap = {
                'applied': 'status-applied',
                'reviewed': 'status-reviewed',
                'shortlisted': 'status-shortlisted',
                'hired': 'status-hired',
                'rejected': 'status-rejected'
            };
            return statusMap[status] || 'status-applied';
        }

        function showNoData() {
            document.getElementById('applicationsContainer').innerHTML = `
                <div class="no-data">
                    <i class="bi bi-inbox"></i>
                    <p>No applications yet. Start applying to jobs!</p>
                </div>
            `;
        }

        /**
         * Load AI-Powered Job Recommendations
         * 
         * Why: Show personalized jobs to increase engagement
         * How: Calls /api/recommendations/jobs endpoint
         * When: Runs on page load automatically
         */
        async function loadRecommendations() {
            const container = document.getElementById('recommendationsContainer');
            
            try {
                // Call AI recommendation API
                const response = await fetch('/api/recommendations/jobs?limit=6');
                const data = await response.json();
                
                // Check if recommendations were found
                if (!data.success || !data.data || data.data.length === 0) {
                    // No recommendations - encourage profile completion
                    container.innerHTML = `
                        <div style="background: rgba(102, 126, 234, 0.1); 
                                    border: 1px solid rgba(102, 126, 234, 0.3); 
                                    border-radius: 10px; 
                                    padding: 30px; 
                                    text-align: center;">
                            <i class="bi bi-lightbulb" style="font-size: 48px; color: #667eea;"></i>
                            <h4 style="color: white; margin-top: 15px;">Complete Your Profile for Smart Recommendations!</h4>
                            <p style="color: #a0aec0; margin: 10px 0 20px;">
                                Add your skills, experience, and preferences to get AI-powered job suggestions
                            </p>
                            <a href="/profile/edit" class="btn-view-all">
                                <i class="bi bi-person-gear"></i> Complete Profile
                            </a>
                        </div>
                    `;
                    return;
                }
                
                // Display recommendations
                container.innerHTML = `
                    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 20px;">
                        ${data.data.map(job => `
                            <div class="recommendation-card">
                                <!-- Match Score Badge -->
                                <div style="position: absolute; top: 15px; right: 15px;">
                                    <span style="background: linear-gradient(135deg, #38ef7d 0%, #11998e 100%);
                                                 color: white;
                                                 padding: 8px 15px;
                                                 border-radius: 20px;
                                                 font-weight: 700;
                                                 font-size: 14px;
                                                 box-shadow: 0 4px 15px rgba(56, 239, 125, 0.3);">
                                        ${job.matchScore}% Match
                                    </span>
                                </div>
                                
                                <!-- Job Title -->
                                <h4 style="color: white; font-size: 18px; font-weight: 700; margin-bottom: 10px; padding-right: 80px;">
                                    ${escapeHtml(job.title)}
                                </h4>
                                
                                <!-- Job Meta Information -->
                                <div style="color: #a0aec0; font-size: 13px; margin-bottom: 15px;">
                                    <div style="margin-bottom: 5px;">
                                        <i class="bi bi-building"></i> ${escapeHtml(job.company || 'Company Name')}
                                    </div>
                                    <div style="margin-bottom: 5px;">
                                        <i class="bi bi-geo-alt"></i> ${escapeHtml(job.location)}
                                        <span style="margin: 0 8px;">•</span>
                                        <i class="bi bi-briefcase"></i> ${escapeHtml(job.jobType)}
                                    </div>
                                    <div>
                                        <i class="bi bi-cash-stack"></i> <strong>${escapeHtml(job.salary || 'Competitive')}</strong>
                                    </div>
                                </div>
                                
                                <!-- Why This Job Section (Explainable AI) -->
                                <div style="margin: 15px 0; padding: 12px; 
                                            background: rgba(56, 239, 125, 0.05); 
                                            border-left: 3px solid #38ef7d; 
                                            border-radius: 5px;">
                                    <div style="color: #38ef7d; font-weight: 600; font-size: 12px; margin-bottom: 8px;">
                                        <i class="bi bi-stars"></i> WHY THIS JOB:
                                    </div>
                                    ${(job.matchReasons || []).slice(0, 2).map(reason => `
                                        <div style="color: #a0aec0; font-size: 12px; margin-bottom: 5px;">
                                            <i class="bi bi-check-circle-fill" style="color: #38ef7d;"></i> ${escapeHtml(reason)}
                                        </div>
                                    `).join('')}
                                </div>
                                
                                <!-- Skills Tags -->
                                ${job.skills && job.skills.length > 0 ? `
                                    <div style="margin: 15px 0;">
                                        ${job.skills.slice(0, 4).map(skill => `
                                            <span style="display: inline-block;
                                                         background: rgba(102, 126, 234, 0.2);
                                                         color: #667eea;
                                                         padding: 4px 10px;
                                                         border-radius: 15px;
                                                         font-size: 11px;
                                                         margin: 0 5px 5px 0;
                                                         font-weight: 600;">
                                                ${escapeHtml(skill)}
                                            </span>
                                        `).join('')}
                                        ${job.skills.length > 4 ? `<span style="color: #667eea; font-size: 11px;">+${job.skills.length - 4} more</span>` : ''}
                                    </div>
                                ` : ''}
                                
                                <!-- Action Buttons -->
                                <div style="display: flex; gap: 10px; margin-top: 15px;">
                                    <button class="btn-view-details" 
                                       data-job-id="${job._id}"
                                       style="flex: 1;
                                              background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                              color: white;
                                              padding: 10px 20px;
                                              border-radius: 8px;
                                              border: none;
                                              text-align: center;
                                              font-weight: 600;
                                              font-size: 13px;
                                              cursor: pointer;
                                              transition: transform 0.2s;">
                                        <i class="bi bi-eye"></i> View Details
                                    </button>
                                    <button class="btn-apply-job"
                                       data-job-id="${job._id}"
                                       data-job-title="${escapeHtml(job.title)}"
                                       style="flex: 1;
                                              background: linear-gradient(135deg, #38ef7d 0%, #11998e 100%);
                                              color: white;
                                              padding: 10px 20px;
                                              border-radius: 8px;
                                              border: none;
                                              text-align: center;
                                              font-weight: 600;
                                              font-size: 13px;
                                              cursor: pointer;
                                              transition: transform 0.2s;">
                                        <i class="bi bi-check-circle"></i> Apply Now
                                    </button>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                `;
                
                // Attach event listeners to dynamically created buttons
                attachRecommendationButtonListeners();
                
            } catch (error) {
                console.error('Error loading recommendations:', error);
                container.innerHTML = `
                    <div style="background: rgba(245, 87, 108, 0.1); 
                                border: 1px solid rgba(245, 87, 108, 0.3); 
                                border-radius: 10px; 
                                padding: 20px; 
                                text-align: center;">
                        <i class="bi bi-exclamation-triangle" style="font-size: 36px; color: #f5576c;"></i>
                        <p style="color: #a0aec0; margin-top: 10px;">
                            Failed to load recommendations. Please refresh the page.
                        </p>
                    </div>
                `;
            }
        }

        /**
         * Attach event listeners to recommendation buttons
         * Using event delegation for dynamically created elements
         */
        function attachRecommendationButtonListeners() {
            // View Details buttons
            document.querySelectorAll('.btn-view-details').forEach(button => {
                button.addEventListener('click', function() {
                    const jobId = this.getAttribute('data-job-id');
                    viewJobDetails(jobId);
                });
            });

            // Apply buttons
            document.querySelectorAll('.btn-apply-job').forEach(button => {
                button.addEventListener('click', function() {
                    const jobId = this.getAttribute('data-job-id');
                    const jobTitle = this.getAttribute('data-job-title');
                    openApplyModal(jobId, jobTitle);
                });
            });
        }

        /**
         * Escape HTML to prevent XSS attacks
         * Why: User-generated content must be sanitized
         */
        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        /**
         * View Job Details in Modal
         */
        async function viewJobDetails(jobId) {
            try {
                const response = await fetch(`/jobs/${jobId}`);
                if (!response.ok) throw new Error('Failed to load job');
                
                const job = await response.json();

                // Populate modal
                document.getElementById('jobDetailsContent').innerHTML = `
                    <div style="color: #e2e8f0;">
